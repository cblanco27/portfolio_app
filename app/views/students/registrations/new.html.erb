<h2>Sign up</h2>

<div class='w-25'>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "students/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

    <div>
    <%= f.label :first_name, style: "display: block" %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name, style: "display: block" %>
    <%= f.text_field :last_name %>
  </div>

  <div> <!-- Allows you to select a major instead of a fill in the blank -->
    <%= f.label :major, style: "display: block" %>
    <%= f.select :major, options_for_select(Student::VALID_MAJORS), {prompt: "Select a Major"}, class: "form-control"%>
  </div>

  <div>
    <%= f.label :minor, style: "display: block" %>
    <%= f.text_field :minor %>
  </div>

  <div>
    <%= f.label :graduation_date, style: "display: block" %>
    <%= f.date_field :graduation_date %>
  </div>

  <div>
    <%= f.label :profile_pic, style: "display: block" %>
    <%= f.file_field :profile_pic %>
  </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

</div>

<%= render "students/shared/links" %>
